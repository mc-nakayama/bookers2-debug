<% if @model =="1" %>
  <h2><%= "Users search for #{@word}" %> </h2>
  <table class="table">
    <thead>
      <th>image</th>
      <th>name</th>
    </thead>
    <% @user.each do |user| %>
    <tbody>
      <tr>
        <td><%= image_tag user.get_profile_image,size:'50x50' %></td>
        <td><%= user.name%></td>
      </tr>
    </tbody>
    <% end %>
  </table>
<% elsif @model=="2" %>
  <h2><%= "Books search for #{@word}" %></h2>
  <table class="table">
    <thead>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <% @book.each do |book| %>
    <tbody>
      <tr>
        <td><%= image_tag book.user.get_profile_image,size:'50x50' %></td>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
    <% end %>
<% end %>