<div class='container'>
  <div class='row'>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>Create Group</h2>
      <%= render 'layouts/errors', obj: @group %>
      <%= form_with model:@group, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name,'グループ名' %>
        <%= f.text_field :name, class: 'form-control group_name' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction,'紹介文' %>
        <%= f.text_field :introduction, class: 'form-control group_introduction', rows: '5' %>
      </div>
      <div class="form-group">
        <%= f.label :image,'グループ画像' %>
        <%= f.file_field :image, class: "form-control-file group_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
      <% end%>
    </div>
  </div>
</div>
